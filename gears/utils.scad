mm_per_inch = 25.4;

//------------------------------------------------------------------

scale = mm_per_inch;
function dim(x) = mm_per_inch * x;

//------------------------------------------------------------------
// control the number of facets on cylinders

facet_epsilon = 0.01;
function facets(r) = 180 / acos(1 - (facet_epsilon / r));

//------------------------------------------------------------------

pi = 3.1415926535;

// degrees to radians
function d2r(d) = (d * pi) / 180;

// radians to degrees
function r2d(r) = (180 * r) / pi;

